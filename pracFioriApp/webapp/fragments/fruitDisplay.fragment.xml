<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <f:SimpleForm>
        <f:toolbar>
            <Toolbar>
                <ToolbarSpacer />
                <Button text="Edit" press="onEdit" type="Reject"/>
            </Toolbar>
        </f:toolbar>
        <f:content>
            <Label text="Name" />
            <Text text="{name}" />
            <Label text="Status" />
            <Text text="{stockStatus}" />
            <Label text="Price" />
            <Text text="{price} {currency}" />
            <Label text="Type" />
            <Text text="{type}" />
            <Label text="Health Benefit" />
            <Text text="{healthBenefits}" />
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>
