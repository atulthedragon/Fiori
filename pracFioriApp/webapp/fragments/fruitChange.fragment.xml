<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <f:SimpleForm editable="true">
        <f:toolbar>
            <Toolbar>
                <ToolbarSpacer />
                <Button text="Display" press="onDisplay" type="Accept" />
            </Toolbar>
        </f:toolbar>
        <f:content>
            <Label text="Name" />
            <Input value="{name}" />
            <Label text="Status" />
            <Input value="{stockStatus}" />
            <Label text="Price" />
            <Input value="{price} {currency}" />
            <Label text="Type" />
            <Input value="{type}" />
            <Label text="Health Benefit" />
            <Input value="{healthBenefits}" />
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>
