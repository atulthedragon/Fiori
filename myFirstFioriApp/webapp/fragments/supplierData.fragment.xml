<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
<Table headerText="Supplier Information" items="{/suppliers}">
<columns>
<Column >
<Text text="Name"/>
</Column>
<Column minScreenWidth="Tablet" demandPopin="true">
<Text text="City"/>
</Column>
<Column minScreenWidth="Tablet">
<Text text="Since When"/>
</Column>
<Column >
<Text text="Speciality"/>
</Column>
</columns>
<items>
<ColumnListItem >
<cells>
<Text text="{name}"></Text>
<Input value="{city}"></Input>
<Input value="{sinceWhen}"></Input>
<Text text="{specialized}"></Text>
</cells>
</ColumnListItem>
</items>
</Table>
</core:FragmentDefinition>